<% if @post.valid? %>

	$(".showPost").append("<%= j render "form_post", post: @post %>")
	$("form").fadeOut(300)
	$(".flash_wrapper").html("<%= j render "shared/messages" %>");
	$(".flash_wrapper").delay(2000).slideUp(500);

<% else %>

	$(".error-wrapper").html("<%= j render "form_error", post: @post %>")	
	$("#post_comment").addClass("error-alert")
	$(".btn").click(function(){
		$("#post_comment").addClass("error-alert")
		if ($("#post_comment").hasClass("error-alert")){
			$("#post_comment").removeClass("error-alert")
		}

	})

	

<% end  %>